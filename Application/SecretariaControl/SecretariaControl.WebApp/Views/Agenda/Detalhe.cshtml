@model SecretariaControl.WebApp.Models.Compromisso
@{
    ViewBag.Title = "Detalhe";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="row">

    <div class="col-lg-8">

        <div class="wrapper wrapper-content animated fadeInUp">

            <div class="ibox">

                <div class="ibox-content">

                    <div class="row">

                        <div class="col-lg-12">

                            <div class="m-b-md">

                                <a href="#" class="btn btn-warning  pull-right"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar Compromisso</a>

                                <h2>Compromisso</h2>

                            </div>

                            <dl class="dl-horizontal"></dl>

                        </div>

                    </div>
                    <div class="row m-t-sm">

                        <div class="col-lg-12">

                            <div class="panel blank-panel">

                                <div class="panel-heading">

                                    <div class="panel-options">

                                        <ul class="nav nav-tabs">

                                            <li class="active"><a href="#tab-1" data-toggle="tab" aria-expanded="false">Detalhes</a></li>

                                            <li class=""><a href="#tab-2" data-toggle="tab" aria-expanded="true"><span class="badge pull-right">@Model.Contatos.Count()</span> Contato</a></li>

                                        </ul>

                                    </div>

                                </div>



                                <div class="panel-body">



                                    <div class="tab-content">

                                        <div class="tab-pane active" id="tab-1">

                                            <div class="row">

                                                <div class="col-lg-5">

                                                    <dl class="dl-horizontal">



                                                        <dt>Descrição:</dt>

                                                        <dd>@Model.Descricao</dd>

                                                    </dl>

                                                </div>

                                                <div class="col-lg-7" id="cluster_info">

                                                    <dl class="dl-horizontal">
                                                        <dt>Data:</dt>

                                                        <dd>@Model.DataCompromisso.ToString("dddd, d \\de MMMM \\de yyyy, HH:mm") </dd>

                                                    </dl>

                                                </div>

                                            </div>
                                        </div>

                                        <div class="tab-pane " id="tab-2">

                                            <div class="row">

                                                @if (Model.Contatos != null && Model.Contatos.Count > 0)
                                                {
                                                    <div class="card-container">
                                                        @foreach (var item in Model.Contatos)
                                                        {
                                                            <div class="col-xs-1 col-sm-7">
                                                               <a class="card animate-all-fast" href="#">
                                                                    <div class="col-sm-8">
                                                                        <div class="col-sm-12 pull-left">
                                                                            <span class="font-sm-title pull-left">@item.Descricao</span>
                                                                            <span class="font-md-content pull-left"><span class="glyphicon glyphicon-phone" aria-hidden="true"></span> @item.Telefone</span>
                                                                            <span class="font-md-content pull-left"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> @item.Email</span>
                                                                        </div>
                                                                    </div>
                                                                </a>
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="empty-card-container">
                                                        <div class="col-sm-12">
                                                            <span class="font-lg-title col-sm-12">Esse compromisso não possui nenhum contato!</span>
                                                        </div>
                                                    </div>
                                                }

                                            </div>







                                                </div>
                                            </div>
                                        </div>

                                    </div>



                                </div>



                            </div>

                        </div>

                    </div>

                </div>

            </div>

        


    <div class="col-lg-4">

        <div class="panel panel-default">

            <div class="panel-heading"><strong>Local</strong></div>

            <div class="panel-body no-padding">

                <a href="http://maps.google.com/?q=@Model.Local" style="color:rgb(129, 134, 134);" target="_blank" class="txt-local"><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>@Model.Local</a>
                <a href="http://maps.google.com/?q=@Model.Local" target="_blank">

                    <img src="http://maps.googleapis.com/maps/api/staticmap?center=@Model.Local&amp;zoom=13&amp;size=304x170&amp;maptype=roadmap&amp;sensor=false">
                </a>
            </div>
        </div>
    </div>
</div>
